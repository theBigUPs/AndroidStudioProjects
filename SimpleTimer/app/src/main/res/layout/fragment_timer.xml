<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".TimerFragment">

    <TextView
        android:id="@+id/seperator_tv2"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="4dp"
        android:text=":"
        android:textSize="60sp"
        app:layout_constraintEnd_toStartOf="@+id/seconds_tn"
        app:layout_constraintStart_toEndOf="@+id/minutes_tn"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/emptyingProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="281dp"
        android:layout_height="132dp"

        android:layout_marginEnd="76dp"
        android:layout_marginBottom="104dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/hours_tn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="70dp"
        android:background="@null"
        android:maxLength="2"
        android:ems="10"
        android:inputType="number"

        android:text="00"
        android:textAlignment="center"
        android:textSize="60sp"
        app:layout_constraintEnd_toStartOf="@+id/minutes_tn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/minutes_tn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="70dp"
        android:background="@null"
        android:ems="10"
        android:inputType="number"
        android:text="00"
        android:maxLength="2"
        android:textAlignment="center"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/seconds_tn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="70dp"
        android:background="@null"
        android:ems="10"
        android:inputType="number"
        android:text="30"
        android:maxLength="2"
        android:textAlignment="center"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/minutes_tn"
        android:focusableInTouchMode="true"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/seperator_tv"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginTop="70dp"
        android:text=":"
        android:textSize="60sp"
        app:layout_constraintEnd_toStartOf="@+id/minutes_tn"
        app:layout_constraintStart_toEndOf="@+id/hours_tn"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/start_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:text="START"
        app:layout_constraintEnd_toStartOf="@+id/seperator_tv2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hours_tn" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:text="Loop"
        app:layout_constraintBottom_toBottomOf="@+id/start_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/start_btn"
        app:layout_constraintTop_toTopOf="@+id/start_btn" />

    <Button
        android:id="@+id/cancel_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CANCEL"
        app:layout_constraintStart_toStartOf="@+id/start_btn"
        app:layout_constraintTop_toBottomOf="@+id/start_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>


